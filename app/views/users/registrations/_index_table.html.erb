<%# <h1 class="title mt-5 mb-5 display-3" style="text-align: center;">Users</h1> %>
  <div class="col  mx-auto ">    
    <%= render 'layouts/search_user' %>
  </div>
<div id="no-more-tables" class="table-responsive card mb-5">
  <div class="container container-custom rounded-3 container-bg">

    <div class="row container-header p-3 bg-light"> 
      <h4 class="font-weight-light mb-0 align-middle">Users</h4>
    </div> 
    
    <div class="row text-center">
      <div class="float-right">
      </div>    
      <div class="table-responsive">
      <table class="table table-hover user-table mb-0">
        <thead>
          <tr>      
            <th scope="col">Name </th>
            <th scope="col">Email </th>  
            <th scope="col">Added  </th>         
            <th scope="col">Role </th> 
          </tr>
        </thead>    
        <%# <%= current_user.role %>  
        <%# p current_user.role       %>
        <tbody>
        <% @users.each do |user| %>           
          <tr class="apple_pagination" > 
            <td><strong><%= user.name %></strong></td> 
            <td><strong><%= user.email %></strong></td>
            <td><strong><%= user.created_at %></strong></td>
            <td><strong><%= user.role %></strong></td>
            <%# Show the buttons to show only the ones with their rights %>
          <%if current_user.role == "admin"%> 
            <td><a href='/users/<%="#{user.id}"%>/edit' class="btn btn-outline-primary btn-sm">EDIT USER </a>
            <td><%= link_to "DELETE USER",  user_delete_path(user.id), method: :delete, :class => "btn btn-outline-primary btn-sm", data: { confirm: 'Are you sure?'} %> </td>      
            <td><a href='/users/<%="#{user.id}"%>/usercourses' class="btn btn-outline-primary btn-sm">USER'S CONTENT </a></td>
            <td><a href='/users/<%="#{user.id}"%>/who_downloaded' class="btn btn-outline-primary btn-sm">WHO DOWNLOADED</a></td>
            <td><a href='/users/<%="#{user.id}"%>/i_downloaded' class="btn btn-outline-primary btn-sm">I DOWNLOADED </a></td>
          <%elsif (user.id == @current_user.id) && current_user.role.include?("teacher") %>
            <td><a href='/users/<%="#{user.id}"%>/edit' class="btn btn-outline-primary btn-sm">EDIT USER </a></td>
            <td><a href='/users/<%="#{user.id}"%>/who_downloaded' class="btn btn-outline-primary btn-sm">WHO DOWNLOADED</a></td>
            <td><a href='/users/<%="#{user.id}"%>/i_downloaded' class="btn btn-outline-primary btn-sm">I DOWNLOADED </a></td>
          <%else%>
            <td><a href='/users/<%="#{user.id}"%>' class="btn btn-outline-primary btn-sm">VIEW USER </a></td>
            <td><a href='/users/<%="#{user.id}"%>/usercourses' class="btn btn-outline-primary btn-sm">USER'S CONTENT </a></td>
          <%end%>

            <%# <td><%= link_to 'Show', user_show_path(u), :class => "btn btn-outline-primary btn-sm" %>
            <%# </td>  %> 
            <%# <td><%= link_to 'Edit', user_edit_path(u), :class => "btn btn-outline-primary btn-sm"%>
            <%# </td> %> 
            
            <%# <td> %>
              <%# <%byebug%> 
              <%# <%= link_to 'Destroy',  user_delete_path(u), method: :delete, :class => "btn btn-outline-primary btn-sm", data: { confirm: 'Are you sure?'} %>
            <%# </td>             %>
          </tr>    
        <% end %>
        </tbody>         
      </table>               
    </div>              
  </div> 
</div>
