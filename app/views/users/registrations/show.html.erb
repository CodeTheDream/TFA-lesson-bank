<div class="user-form-container">
  <div class="set-size-and-position">
    <div class="blue-header"></div>  
      <div class="container mt-5 ">     
        <div class="row big_card center">  
          <div class="col-lg-12 ">  
            <div class="row">
              <div class="col-md-9 col-lg-8 mx-auto">
                <h4 class="font-weight-light mb-0 align-middle">Show User</h4>
                <div class="row">
                  <div class="col-sm-6">
                    <br>
                    <div>
                      <strong>First Name:</strong>
                      <%= @user.first_name %>                
                    </div>
                    <div>
                      <strong>Last Name:</strong>
                      <%= @user.last_name %>                
                    </div>
                    <div>
                      <strong>Email:</strong>
                      <%= @user.email %>                
                    </div>
                    <div>
                      <strong>Role:</strong>
                      <%= @user.role %>                
                    </div>
                  </div>
                </div> 
                <hr class="my-2">    
                <div class="actions form-group p-3">   
                  <%if current_user == "admin"%> 
                    <%= link_to 'Edit', user_edit_path(@user)%>
                    <%= link_to 'Destroy', user_delete_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
                  <% end %>   
                  <%= link_to 'Back', users_path, :class => "btn btn-outline-primary"  %>           
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>