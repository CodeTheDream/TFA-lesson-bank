<div class="user-form-container">
  <div class="set-size-and-position">
    <div class="blue-header"></div>  
    <div class="container mt-5 ">     
      <div class="big_card" style="width:95%;">  
        <div class="col-lg-12 ml-4">  
          <h4 class="font-weight-light mb-0">Show User</h4>
          <div class="col-sm-6" style="margin-left:-15px;">
            <br class="mr-4">
            <div>
              <strong>First Name:</strong>
              <%= @user.first_name %>                
            </div>
            <div>
              <strong>Last Name:</strong>
              <%= @user.last_name %>                
            </div>
            <div>
              <strong>Email:</strong>
              <%= @user.email %>                
            </div>
            <div>
              <strong>Role:</strong>
              <%= @user.role %>                
            </div>
          </div> 
          <hr>    
          <div class="actions form-group p-3">   
            <%if current_user == "admin"%> 
              <%= link_to 'Edit', user_edit_path(@user)%>
              <%= link_to 'Destroy', user_delete_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
            <% end %>   
            <%= link_to 'Back', users_path, :class => "btn btn-outline-primary"  %>           
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
