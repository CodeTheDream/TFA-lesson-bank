<div class="card h-100 search_card " >
  <div class="card-header"></div> 
  <div class= "text-right">
    <div id="circle"><h4 class="text-center">U</h4></div>
  </div>     
  <div class="card-body" >      
    <h2 class="card-title"><%= user.name.titleize %>
    <h2 class="card-mb-2">email:<p></p> 
    <%= user.email %>
    <h2 class="card-mb-2">status: <%= user.status %>
    <h2 class="card-mb-2">role: <%= user.role %>
    <i class=" fa fa-pencil-alt pencil_edit_card"></i>        
    </h2>    
    <div class="card-text  mt-3" >         
      <%= simple_format truncate(h(user.role.capitalize), length: 10, separator: ' ') %>
    </div>
  </div>
  <div class="text-center ">
    <div class="mt-2 "<span style="color: gray;font-size:10px; font-style:italic;">Created by  <%= user.name %></span></div>
    <div class="mt-2  mb-4 "<span style="color: gray;font-size:10px; font-style:italic;">Last Edited on <%= user.updated_at.to_date.strftime("%B %d, %Y")%> </span></div>
    <a href='/users/<%="#{user.id}"%>' class="btn button_user_card">VIEW USER </a>
    <a href='/users/<%="#{user.id}"%>/edit' class="btn button_user_card">EDIT USER </a>
    <%= link_to "DELETE USER",  user_delete_path(user.id), method: :delete, :class => "btn button_user_card", data: { confirm: 'Are you sure?'} %>       
    <%# <%= link_to "DELETE USER",  user_delete_path(user.id), method: :delete, :class => "btn button_user_card", data: { confirm: 'Are you sure?'} %>        
    <a href='/users/<%="#{user.id}"%>/usercourses' class="btn button_user_card">USER'S CONTENT </a>
    <a href='/users/<%="#{user.id}"%>/who_downloaded' class="btn button_user_card">WHO DOWNLOADED</a>
    <a href='/users/<%="#{user.id}"%>/i_downloaded' class="btn button_user_card">I DOWNLOADED </a>


  </div>
</div>
