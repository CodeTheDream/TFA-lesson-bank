<h1 class="title mt-5 mb-5 display-3" style="text-align: center;">User's Logs</h1>
<div id="no-more-tables" class="table-responsive card mb-5">
  <div class="container container-custom rounded-3 container-bg">
  </div>
</div>
<div class="grid-container">
  <div class="container-mt5">
    <h4 class="font-weight-light mb-0 align-middle">User: <%= @user.name%></h4>
    <div class="row">
      <div class="table-responsive">
  
        <table class="table table-striped table-hover user-table mb-0">
        <thead>
        <div class="row">
        <tr>
            <th class="h2" style="background:none;">Email</th>
            <th class="h2" style="background:none;">Log Id</th>
            <th class="h2" style="background:none;">Document Name</th>
            <th class="h2" style="background:none;">User Name</th>
            <th colspan="3"></th>
        </tr>
        </div>
        </thead>

        <tbody>
            <% @user.logs.each do |log| %>
            <div class="row">
                <tr>
                <td data-title="User Email"><%= @user.email %></td>
                <td data-title="Document Id"><%= log.id %></td>
                <td data-title="Document Name"><%= log.document.name %></td>
                <%# <td data-title="Doc Id"><%= @user.logs.map {|log| log.document.name }</td> %> 
                <td data-title="User Name"><%= log.user.name %></td>
                </tr>
            </div>
            <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
