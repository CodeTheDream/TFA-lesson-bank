<div class="user-form-container">
  <div class="set-size-and-position">
    <div class="blue-header"></div>  
      <div class="container mt-5 ">     
        <div class="row big_card center">  
          <div class="col-lg-12 center">  
            <div class="row ">
              <div class="col-md-9 col-lg-8 mx-auto">
                <h4 class="font-weight-light mb-0 align-middle">Edit User</h4>

                <%# <h2 class="center"> Edit User </h2> %>
                <%# <h2>Edit <%= resource_name.to_s.humanize %>

                <%= form_for(resource, as: resource_name, url: user_update_path(resource), html: { :onsubmit => 'return checkEmail();', method: :put }) do |f| %>    
                  <%= render "users/shared/error_messages", resource: resource %>
                  <%= hidden_field_tag "id", f.object.id %>    
                  <div class="form-group">
                    <%= f.label :FirstName %><br />
                    <%= f.text_field :first_name, autofocus: true %>
                  </div>

                  <div class="form-group">
                    <%= f.label :LastName %><br />
                    <%= f.text_field :last_name, autofocus: true %>
                  </div>

                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, :required => true, autocomplete: "email", id:"email"%>
                  <%# autocomplete: "email", %>
                  </div>
                  
                  <% if current_user.role.include?("admin") %>
                  <div class="form-group">
                    <%= f.label :status %>                                              
                    <%= f.select :status, options_for_select(['Pending', 'Approved'], f.object&.status), { include_blank: true }, :class => 'form-group'%> 
                  </div>
                  <%else%>
                    <% current_user.role %>
                  <% end %>
                  
                  <% if current_user.role.include?("admin") %>
                    <div class="form-group">
                      <%= f.label :role %><br />
                      <%= f.select :role, options_for_select(["admin", "teacher"], f.object.role), { include_blank: true }%>
                    </div>
                  <%else%>
                    <% current_user.role %>
                  <% end %>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>

                  <div class="actions">
                    <%= f.submit "Update", id: 'submit_button' %>
                  </div>

                <%end%>

              <%# <h3>Cancel my account</h3> %>

              <%# <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
              <%# </p> %> 

              <%= link_to "Back", :back, :class => "center btn btn-outline-primary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      </div>   
    </div>
  </div>
</div>    

