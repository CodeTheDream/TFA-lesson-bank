<div class="user-form-container">
  <div class="set-size-and-position">
    <div class="blue-header"></div>  
      <div class="container mt-5 ">     
        <div class="row big_card">  
          <div class="col-lg-12 ">  
            <div class="row">

              <div class="grid-container">
                <div class="container-mt5">
                  <h4 class="font-weight-light mb-0 align-middle">User: <%= @user.name%></h4>
                  <div class="row">
                    <div class="table-responsive">
                
                  <table class="table table-striped table-hover user-table mb-0">
                    <thead class="cf">
                      <div class="row">
                        <tr>
                          <th class="h4" >Courses & Lessons</th> 
                        </tr>
                      </div>
                    </thead>
                    <tbody>
                      <% @user.courses.each do |course| %>
                        <div class="row">
                          <tr>
                            <td>Course: <%= course.title %></td>
                            <td>
                          </tr>
                          <% course.lessons.each do |lesson| %>
                        <div class="row">
                          <tr>
                            <td>Lesson: <%= lesson.title %></td>
                            <td>
                          </tr>
                        </div>
                      <% end %>
                        </div>
                      <% end %>
                    </tbody>
                  </table>
                  </div>



                  <div class="actions form-group p-3">   
                    <%if current_user == "admin"%> 
                      <%= link_to 'Edit', user_edit_path(@user)%>
                      <%= link_to 'Destroy', user_delete_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
                    <% end %>   
                    <%= link_to 'Back', users_path, :class => "btn btn-outline-primary"  %>           
                  </div>

                </div>
              </div> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>