<h2 class="title mt-5 mb-5 display-3" style="text-align:center">Courses</h2>
<div id="no-more-tables" class="table-responsive card mb-5">
<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Subject</strong>
  <%= @course.subject %>
</p>

<p>
  <strong>Grade Level:</strong>
  <%= @course.grade_level %>
</p>

<p>
  <strong>State:</strong>
  <%= @course.state %>
</p>

<p>
  <strong>District:</strong>
  <%= @course.district %>
</p>

<p>
  <strong>Start Date:</strong>
  <%= @course.start_date %>
</p>

<p>
  <strong>End Date:</strong>
  <%= @course.end_date %>
</p>

<p>
  <strong>Tags:</strong>
  <% @course.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
</div>

<%# Lessons for this course %>
    <h2 class="title mb-5 display-3" style="text-align:center"><%= t ("Lessons")%></h2>
    <div id="no-more-tables" class="table-responsive card mb-5">
    <table class="table table-hover">
      <thead>
          <tr>
          <strong><th class="h2" style="background:none;"> Lesson Name</th></strong>
          <strong><th class="h2" style="background:none;"> Lesson Description</th></strong>

          </tr>
      </thead>
      <tbody>
        <tr>
          <% @course.lessons.each do |lesson| %>
          <td data-title="Title"><%= lesson.title %></td>
          <td data-title="Description"><%= lesson.description %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  </div>

  <%# Documents for this course %>
    <h2 class="title mb-5 display-3" style="text-align:center">Documents</h2>
    <div id="no-more-tables" class="table-responsive card mb-5">
    <table class="table table-hover">
      <thead>
        <tr>
        <strong><th class="h2" style="background:none;"> Document Name</th></strong>
        <strong><th class="h2" style="background:none;"> File</th></strong>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @course.documents.each do |document| %>
          <td data-title="Title"><%= document.name %></td>
          <td data-title="File"><%= image_tag(document.file.preview(resize_to_fit: [100,100])) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  </div>

<%= link_to 'Edit', edit_course_path(@course), :class => "btn btn-outline-primary btn-sm" %> |
<%= link_to 'Back', courses_path, :class => "btn btn-outline-primary btn-sm" %>|

<%= link_to 'Lessons', course_lessons_path(@course), :class => "btn btn-outline-primary btn-sm" %> 
<%= link_to 'Documents', course_index_course_documents_path(@course) , :class => "btn btn-outline-primary btn-sm" %>

</div>
