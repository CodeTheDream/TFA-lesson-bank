<div class="custom-container container-fluid ">    
        
  <div class="row justify-content-end ">
    <div class="col-6">  
      <%= render 'layouts/search_landingpage' %>
    </div>
  </div>   
  <h2 class="course_table_title" style="text-align: left;">Courses</h2>
  <div class="table-responsive">    
    <table class="table  table-striped">
      <div class="admin_table table-sm  table-striped ">
        <thead>    
          <tr>
            <th scope="col"><span style="color:gray">NAME </span><i class=" fa fa-caret-down table_down_arrow"</i></th>
            <th scope="col"><span style="color:gray">AUTHOR </span><i class=" fa fa-caret-down table_down_arrow"</i></th>
            <th scope="col"><span style="color:gray">ADDED </span><i class=" fa fa-caret-down table_down_arrow"</i></th>
            <th scope="col"><span style="color:gray">STATUS </span><i class=" fa fa-caret-down table_down_arrow"</i></th>  
            <th scope="col"></th>   
          </tr>          
        </thead>
        <tbody>
          <% @courses.each do |course| %>      
            <tr>
              <td data-title="Title"><%= course.title %></td>
              <td data-title="User"><%= course.user.name %></td>
              <td data-title="Date"><%= course.created_at.to_date.strftime("%B %d, %Y")%></td> 
              <% if course.present? && !course.flags.present?%>          
                <td data-title="State"> Live</td> 
              <% else %>         
                <td data-title="State">Blocked</td>
              <%end%> 
              <%#= link_to 'EDIT', course_lesson_form_courses_path(course_id: course.search_item), :class => "btn btn-sm edit_button_table" %>  
            </tr>      
          <% end %>
        </tbody>      
      </div>
    </table>
  </div>  
</div>
