<h1 class="title mt-5 mb-5 display-3" style="text-align: center;">Courses</h1>
<div id="no-more-tables" class="table-responsive card mb-5">
<table class="table table-hover">
  <thead>
    <div class="row">
    <tr>
      <th class="h2" style="background:none;">Title</th>
      <th class="h2" style="background:none;">Description</th>
      <th class="h2" style="background:none;">Subject</th>
      <th class="h2" style="background:none;">Grade Level</th>
      <th class="h2" style="background:none;">State</th>
      <th class="h2" style="background:none;">District</th>
      <th class="h2" style="background:none;">Start Date</th>
      <th class="h2" style="background:none;">End Date</th>

      <th colspan="3"></th>
    </tr>
    </div>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <div class="row">
      <tr>
        <td data-title="Title"><%= course.title %></td>
        <td data-title="Description"><%= course.description %></td>
        <td data-title="Subject"><%= course.subject %></td>
        <td data-title="Course"><%= course.grade_level %></td>
        <td data-title="State"><%= course.state %></td>
        <td data-title="District"><%= course.district %></td>
        <td data-title="Rating"><%= course.start_date %></td>
        <td data-title="Downloads"><%= course.end_date %></td>
        
        <%# <td data-title="Tags"><%= course.tags %>
        <%# </td> %>



        <td><%= link_to 'Show', course, :class => "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_course_path(course), :class => "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-primary btn-sm" %></td>
      </tr>
    </div>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Course', new_course_path, :class => "btn btn-outline-primary btn-sm" %>
