
<div class="col mb-5 mx-auto">
  <div class="card h-100 search_card " style=" width: 18rem;">
    <div class="card-header"></div> 
    <div class= "text-right">
      <div id="circle"><h4 class="text-center">C</h4></div>
    </div> 
    <div class="card-body" style="height: 40vh;">       
      <h2 class="card-title"><%= course.title.titleize %></h2>      
      <div><span style="color: gray">SUBJECT:</span> <%= course.subject%></div>
      <div class="mb-4"><span style="color: gray">GRADE: </span><%= course.grade_level %></div>  
      <% if course.tags.present? %>
        <% course.tags.split(' ').each do |tag| %> 
          <span style="background-color:white;color: gray;padding:2px;font-size:12px;"><%= tag.capitalize %></span>
        <%end%>
      <%end%>

      
      <div class="card-text mb-4 mt-4" style="height: 15vh;">        
        <%= simple_format truncate(h(course.description.capitalize), length: 130, separator: ' ') %>
        <% if course.description.length >  100 %>
          <%= link_to "Read More", course_path(course), class:"read_more"%>
        <%end%>
      </div>  
    </div>
    
    <div class="text-center ">
      <a href='/courses/<%="#{course.searchable_id}"%>' class="btn button_view_card right-arrow ">VIEW COURSE </a>
    </div>
  </div>
</div>
  