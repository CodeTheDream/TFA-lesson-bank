<div class="col mb-4 mx-auto">   
  <div class="card h-100 search_card mb-4 " style=" width: 18rem;">
    <div class="card-header"></div> 
    <div class= "text-right">
      <div id="circle"><h4 class="text-center">L</h4></div>
    </div> 
    <div class="card-body" style="height: 35vh;" >
      <h3 class="card-title"><%= lesson.title %></h3>  
      <div>SUBJECT: <%= %></div>    
      <div>Units Covered: <%= lesson.units_covered%></div> 
      <h5 class="search_tags">Tags:<%= link_to tag.name, tag_path(tag)  %></h5>  
      <div class="card-text mb-4" style="height: 15vh;">
      <div>DESCRIPTION: </div>   
        <%= simple_format truncate(h(lesson.description), length: 150, separator: ' ') %>
        <%= link_to "Read More", lesson_path(lesson)%>
      </div>
    </div>
    <div class="text-center">
      <a href='/courses/<%="#{lesson.course_id}"%>?lesson_id=<%="#{lesson.searchable_id}"%>&commit=Preview' class="btn button_view_card">VIEW LESSON</a>
    </div>
  </div> 
</div> 


