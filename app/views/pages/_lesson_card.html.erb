<div class="col  mx-auto">  
  <div class="card h-100 search_card mb-4 " style=" width: 18rem;">
    <div class="card-header"></div> 
    <div class= "text-right">
      <div id="circle"><h4 class="text-center">L</h4></div>
    </div> 
    <div class="card-body" style="height: 40vh;" >

      <p class="card-title"><%= lesson.title.titleize  %></p>     
      <div><span style="color: gray">SUBJECT:</span> <%= lesson.subject %></div>           
      <div class="mb-4"><span style="color: gray">GRADE:</span> <%= lesson.grade_level%></div>
     
      <div class="search_tags"><span style="background-color:white;color: gray;"><%= lesson.tags %></div> </span>

       


      <div class="card-text mb-4 mt-4" style="height: 15vh;">      
        <%= simple_format truncate(h(lesson.description.capitalize), length: 100, separator: ' ') %>
        <% if lesson.description.length >  100 %>
         
            <%= link_to "Read More", lesson_path(lesson), class:"read_more"%>
          
        <%end%>
      </div>
    </div>
    <div class="text-center ">
      <a href='/courses/<%="#{lesson.searchable_id}"%>' class="btn button_view_card right-arrow ">VIEW LESSON </a>
    </div>
  </div> 
</div> 


