 <div class="grid-container">
    
              <div class="search-filter">    
                <%= form_tag(search_page_path, :method => 'get') do -%>
                  <div class="mb-4">
                    <h5>Filters</h5>
                    <small class="form-text text-muted mt-4">SUBJECT</small>
                    <%= select_tag :subject, options_for_select(@subjects, @selected_subject), {include_blank: true, class: 'form-control'}  %>
                  </div>
                  <div class="mb-4">
                    <small class="form-text text-muted">DISTRICT</small>
                    <%= select_tag :district, options_for_select(@districts), { include_blank: true, class: 'form-control' } %>
                  </div>
              â€‹ <h6 class="form-text text-bold mb-2">Grade Level:</h6>
                    <div class='grid-container-filter mb-2 checkbox-format '>
                    
                      <% @available_grade_levels.each do |grade_level|%>
                          
                        <%= check_box_tag "available_grade_levels[#{grade_level}]", grade_level %>
                        <%= label_tag "available_grade_levels[#{grade_level}]", grade_level  %>
                      <%end%>
                    </div>
                  
                  <%= hidden_field_tag :search, @search %>
                  <div class="text-center">
                    <%= submit_tag "FILTER RESULTS", :class => 'btn button_filter ' %>
                  </div>
                <% end %>
              </div>
              <div class="main-result">          
                <div class="col mb-4 mx-auto">   
                  <%= render 'layouts/search_landingpage' %>
                </div>     
                             
     
                <div class="col mb-4 mx-auto">   
                  <h5 class="results"><b>RESULTS FOR:</b> <span style="color: gray"><%= params[:search].present? ? params[:search].capitalize : "" %></span></h5>
                </div>    
                 
                
                <div class="row row-cols-1 row-cols-md-3 shadow-none">              
                  <% @results.each do |result| %>  
                    <div class="col mx-auto">     
                      <% if result.searchable_type == "Lesson" %>
                        <%= render 'lesson_card', lesson: result %>
                      <% else %>  
                        <%= render 'course_card',  course: result %>
                      <% end %>               
                    </div>  
                    
                                     
                  <%end%>              
                </div> 
              </div>
   
            </div>
 

